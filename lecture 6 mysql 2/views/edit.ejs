    <h2> You are about to edit this User : <%= user.email %></h2>
    <!-- patch request using method-override -->
    <form action="/user/<%= user.id %>?_method=PATCH" method="post">
        <textarea name="username" id=""><%= user.username %></textarea><br><br>
        <input type="password" placeholder="Enter your valid password" name="password"><br><br>
        <button>Edit Username</button>
    </form>

    </body>
